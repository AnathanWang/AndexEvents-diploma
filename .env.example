# AndexEvents - Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=andexadmin
DB_PASSWORD=andexevents
DB_NAME=andexevents
DB_SSL_MODE=disable

# Full connection string (alternative to individual vars)
# DATABASE_URL=postgres://andexevents:andexevents_dev_password@localhost:5432/andexevents?sslmode=disable

# ============================================
# REDIS
# ============================================
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MINIO (S3-compatible storage)
# ============================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=andexevents
MINIO_SECRET_KEY=andexevents_minio_secret
MINIO_USE_SSL=false
MINIO_BUCKET_AVATARS=avatars
MINIO_BUCKET_EVENTS=events
MINIO_BUCKET_MEDIA=media

# ============================================
# FIREBASE
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_FILE=./secrets/firebase-credentials.json

# ============================================
# SERVICES PORTS
# ============================================
AUTH_SERVICE_PORT=8001
EVENTS_SERVICE_PORT=8002
MATCH_SERVICE_PORT=8003
UPLOAD_SERVICE_PORT=8004

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
LOG_LEVEL=debug

# ============================================
# JWT (for internal service communication)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# CORS
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
